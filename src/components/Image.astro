---
export interface Props {
	src: string;
	alt?: string;
	caption?: string;
}

const { src, alt = "", caption } = Astro.props as Props;
---

<figure class="figure space-y-2">
	<img src={src} alt={alt}/>
	<div class="text-sm italic caption">{caption}</div>
</figure>
<style>
	.figure {		
		img { border-radius: var(--rounded-base); }
	}
	
	.caption {
		color: var(--color-secondary);
	}
</style>